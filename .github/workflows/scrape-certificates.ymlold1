name: Scrape Certificates Data

on:
  # Esegui automaticamente ogni giorno alle 3:00 AM UTC
  schedule:
    - cron: '0 3 * * *'
  
  # Permetti esecuzione manuale dal tab Actions di GitHub
  workflow_dispatch:

jobs:
  scrape:
    runs-on: ubuntu-latest
    
    steps:
      # 1. Checkout del repository
      - name: ğŸ“¦ Checkout repository
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          fetch-depth: 0  # Fetch full history for rebase
      
      # 2. Setup Node.js
      - name: ğŸŸ¢ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
      
      # 3. Installa dipendenze
      - name: ğŸ“¥ Install dependencies
        run: |
          npm install playwright
          npx playwright install chromium
          npx playwright install-deps
      
      # 4. Crea cartella data se non esiste
      - name: ğŸ“ Create data directory
        run: mkdir -p data
      
      # 5. Esegui lo scraper
      - name: ğŸ•·ï¸ Run certificates scraper
        run: node certificates-scraper-fixed.js
        continue-on-error: true
      
      # 6. Verifica che il file sia stato creato
      - name: âœ… Verify data file exists
        run: |
          if [ -f "data/certificates-data.json" ]; then
            echo "âœ… certificates-data.json created successfully"
            ls -lh data/certificates-data.json
            echo "ğŸ“Š File size: $(du -h data/certificates-data.json | cut -f1)"
            echo "ğŸ“‹ Certificates count: $(grep -o '"isin"' data/certificates-data.json | wc -l)"
          else
            echo "âŒ certificates-data.json not found"
            exit 1
          fi
      
      # 7. Configura Git
      - name: âš™ï¸ Configure Git
        run: |
          git config --local user.email "github-actions[bot]@users.noreply.github.com"
          git config --local user.name "github-actions[bot]"
      
      # 8. Pull latest changes before push (FIX CONFLICT)
      - name: ğŸ”„ Pull latest changes
        run: |
          git pull --rebase origin main || echo "No remote changes to pull"
      
      # 9. Commit e push dei cambiamenti
      - name: ğŸ“¤ Commit and push changes
        run: |
          git add data/certificates-data.json
          git diff --staged --quiet || git commit -m "Auto-update certificates data - $(date '+%Y-%m-%d %H:%M:%S')"
          git push origin main
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      
      # 10. Notifica successo
      - name: ğŸ‰ Success notification
        if: success()
        run: |
          echo "âœ… Certificates scraping completed successfully!"
          echo "ğŸ“¦ Data updated and pushed to repository"
          echo "ğŸ”„ Render will auto-deploy the new data"
